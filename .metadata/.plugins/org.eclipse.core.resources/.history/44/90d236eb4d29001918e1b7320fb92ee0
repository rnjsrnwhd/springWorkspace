<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 게시판 처리 SQL -->
<mapper namespace="com.mychat.chatTest.Dao.MemberMapper">
	
	<!-- 회원가입 -->
	<insert id="joinMember" parameterType="Hashmap">
	INSERT INTO	CHATUSER(
	USERID,
	USERPW
	)
	VALUES(
	#{userid},
	#{userpw}
	)
	
	</insert>
	
	<!--채팅 유저 로그인 -->
	<select id="userLogin" parameterType="Hashmap" resultType="String">
	SELECT 
	USERID
	FROM CHATUSER
	WHERE
	USERID=#{userid} and USERPW=#{userpw}
	</select>

	

</mapper>
