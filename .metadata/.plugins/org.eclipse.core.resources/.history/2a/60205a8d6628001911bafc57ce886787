<script>
	var login;

	function cancel() {
		document.getElementById("login").innerHTML=login;
	}
	
	function loginform() {
		var context="";
		login=document.getElementById("login").innerHTML;
		
		context+="<form action='login'>";
		context+="ID : <input type='text' name='userid'>&nbsp";
		context+="PW : <input type='password' name='userpw'>&nbsp&nbsp";
		context+="<input type='submit' value='로그인'>&nbsp";
		context+="<input type='button' onclick='javascript:cancel()' value='창닫기'>";
		
		context+="</form>";
		
		document.getElementById("login").innerHTML=context;
	}
</script>
<body>
<h1>
	채팅 메인 페이지 
</h1>


<div id="login"><h2><a onclick="javascript:loginform()">로그인</a></h2><br></div>
