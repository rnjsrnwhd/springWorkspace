package com.mychat.chatTest.Controller;

import java.util.HashMap;

import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.mychat.chatTest.Dao.MemberDAO;

@Controller
public class MemberController {
	
	@Autowired
	MemberDAO dao;
	
	/*작성일 2/3
	작성자 권구종
	act=회원가입 페이지로 이동*/
	@RequestMapping(value="/gotoJoinMember", method=RequestMethod.GET)
	public String gotoJoinMember() {
		
		return "joinMember";
	}
	
	/*작성일 2/3
	작성자 권구종
	act=회원가입 처리*/
	@RequestMapping(value="/JoinMember", method=RequestMethod.POST)
	public String JoinMember(String userid,String userpw,Model model) {
		HashMap<String,Object> user=new HashMap<String, Object>();
		user.put("userid", userid);
		user.put("userpw", userpw);
		
		int result=dao.joinMember(user);
		
		if(result==0) {
			model.addAttribute("userid", userid);
			model.addAttribute("userpw", userpw);
			
			return "joinMember";
		}
		
		return "redirect:/";
	}
	
	/*작성일 2/4
	작성자 권구종
	act=로그인
	para=Hashmap*/
	@RequestMapping(value="/login", method=RequestMethod.GET)
	public String login(String userid,String userpw,HttpSession session,Model model) {
		HashMap<String, Object> user=new HashMap<String, Object>();
		user.put("userid", userid);
		user.put("userpw", userpw);
		
		String result;
		
		result=dao.userLogin(user);
		session.setAttribute("userid", result);
		
		if(result==null) {
			model.addAttribute("caution", "아이디와 비밀번호를 다시 확인해주세요.");
			
			return "home";
		}
		return "redirect:/";
	}
	
	
	/*작성일 2/4
	작성자 권구종
	act=로그아웃*/
	@RequestMapping(value="/logout", method=RequestMethod.GET)
	public String logout(HttpSession session) {
	 session.setAttribute("userid", null);
		return "redirect:/";
	}
	
	/*작성일 2/5
	작성자 권구종
	act=채팅방목록*/
	@RequestMapping(value="/gotoChatRooms", method=RequestMethod.GET)
	public String gotoChatRooms() {

		return "chatRoom";
	}
	
	/*작성일 2/5
	작성자 권구종
	act=채팅방 만들기 페이지로 이동*/
	@RequestMapping(value="/gotomakeChatRoom", method=RequestMethod.GET)
	public String gotomakeChatRoom() {

		return "makeChatRoom";
	}
	
	
	
	
	
	
	
	
	
	
	

}
